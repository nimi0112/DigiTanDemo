<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NewTheme" parent="AppTheme">


    </style>

    <style name="style_action_button_slide_one">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="style_action_button_start">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="style_et_time_slide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:background">@drawable/xml_round_rect</item>
        <item name="android:padding">9dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="stye_text_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
